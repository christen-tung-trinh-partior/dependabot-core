FROM dependabot/dependabot-core

RUN apt-get update && apt-get install -y vim strace ltrace gdb

RUN mkdir -p /code/lib/dependabot /code/helpers
WORKDIR /code

COPY Gemfile Gemfile.lock dependabot-core.gemspec .gitignore /code/
COPY lib/dependabot/version.rb /code/lib/dependabot/
RUN bundle install

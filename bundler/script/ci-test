#!/bin/sh

bundle install
bundle exec rubocop .
bundle exec rspec spec

[ "$SUITE_NAME" == "bundler1" ] &&\
  cd helpers/v1 && \
  BUNDLER_VERSION=1 bundle install && \
  BUNDLER_VERSION=1 bundle exec rspec spec &&\
  cd -

[ "$SUITE_NAME" == "bundler2" ] &&\
  cd helpers/v2 && \
  BUNDLER_VERSION=2 bundle install && \
  BUNDLER_VERSION=2 bundle exec rspec spec &&\
  cd -
